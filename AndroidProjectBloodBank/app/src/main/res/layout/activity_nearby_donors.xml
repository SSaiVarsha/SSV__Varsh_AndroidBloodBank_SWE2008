<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Blood Type Spinner -->
    <Spinner
        android:id="@+id/spinnerBloodType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:prompt="@string/select_blood_type" />

    <!-- Location Spinner -->
    <Spinner
        android:id="@+id/spinnerLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerBloodType"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:prompt="@string/select_location" />

    <!-- Location EditText -->
    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Location"
        android:textStyle="bold"
        android:layout_below="@id/spinnerLocation"
        android:layout_marginTop="12dp" />

    <!-- Search Button -->
    <Button
        android:id="@+id/btnSearchDonors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Donors"
        android:layout_below="@id/etLocation"
        android:layout_marginTop="12dp"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF" />

    <!-- Map Placeholder Image -->
    <ImageView
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/btnSearchDonors"
        android:layout_marginTop="20dp"
        android:contentDescription="Map Placeholder"
        android:scaleType="centerCrop"
        android:src="@drawable/map_placeholder"
        android:background="#EEEEEE"/>
</RelativeLayout>
